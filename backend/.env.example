# CrowdPay Backend Environment Variables (Example)
#
# Copy this file to .env and fill in the values

# Flask Configuration
SECRET_KEY=your-secret-key-change-in-production
FLASK_DEBUG=True
FLASK_ENV=development

# Supabase Configuration
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_KEY=your-supabase-key

# LNbits Configuration (Lightning Network Payments)
# For development, you can use https://demo.lnbits.com
# For production, use your own LNbits instance
LNBITS_URL=https://demo.lnbits.com
LNBITS_WALLET_ID=your-wallet-id
LNBITS_ADMIN_KEY=your-admin-key
LNBITS_INVOICE_KEY=your-invoice-key

# Webhook URL for LNbits payment notifications (optional)
# Set this to your backend's public URL + /api/webhooks/lnbits
LNBITS_WEBHOOK_URL=

# Platform Fee (percentage deducted from contributions)
PLATFORM_FEE_PERCENT=2.5

# Polling Configuration
POLLING_INTERVAL=30
POLLING_TIMEOUT=3600

# CORS (comma-separated list of allowed origins)
CORS_ORIGINS=http://localhost:3000,http://localhost:5173
